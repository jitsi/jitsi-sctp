<assembly>
    <!-- Dependent projects will use this id as the classifier to match this assembly -->
    <id>${git.commit.id.describe-short}-${maven_platform_classifier}</id>
    <formats>
        <format>jar</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${usrsctp_cmake_install_dir}/lib</directory>
            <includes>
                <include>*.lib</include>
                <include>*.a</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${usrsctp_cmake_install_dir}/include</directory>
            <includes>
                <include>*.h</include>
            </includes>
            <outputDirectory>include</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
            <outputDirectory>META-INF/maven/${project.groupId}/${project.artifactId}/</outputDirectory>
        </fileSet>
    </fileSets>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>